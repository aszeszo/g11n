depend fmri=system/font/truetype/kacst type=group facet.locale.ar=true
depend fmri=system/font/truetype/lohit type=group facet.locale.hi=true
depend fmri=system/font/truetype/mgopen type=group facet.locale.el=true
depend fmri=system/font/truetype/thai-scalable type=group facet.locale.th=true
depend fmri=system/input-method/ibus type=group
