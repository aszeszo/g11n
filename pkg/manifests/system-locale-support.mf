set name=pkg.fmri value=pkg:/system/locale/support@0.1,$(PKGVERS_BUILTON)-$(PKGVERS_BRANCH)
set name=pkg.description value="Cluster installs basic fonts, input methods, or code conversions according to locale facet configuration. Also installs translation packages which have not been controlled by facet directly yet."
set name=pkg.summary value="Language Support cluster"
set name=info.classification value=org.opensolaris.category.2008:System/Localizations
depend fmri=system/font/truetype/arabeyes type=group facet.locale.ar=true
