FONTROOT	= $(FILEROOT)/usr/share/fonts/TrueType
ROOT_FONT_DIR 	= $(FONTROOT)/arphic
ROOT_DOC_DIR 	= $(FILEROOT)/usr/share/doc/arphic

all: $(VER)/.unpacked

$(VER)/%.txt: $(VER)/%.TXT
	cp $< $@

install: $(VER)/.installed


$(VER)/.fonts_installed: $(VER)/.unpacked
	$(INSDIR) -m 755 $(ROOT_FONT_DIR)
	( cd $(VER); \
	for f in $(FONTS); do \
		$(INS) $(ROOT_FONT_DIR) $$f; \
	done; )
	touch $@

$(VER)/%.bz2: $(VER)/%
	$(BZIP2) -c $< > $@

$(VER)/.docs_installed: $(VER)/.unpacked $(DOCS:%=$(VER)/%.bz2)
	$(INSDIR) -m 755 $(ROOT_DOC_DIR)
	( cd $(VER); \
	DOCS="$(DOCS)"; \
	for f in $$DOCS; do \
		$(INSDIR) $(ROOT_DOC_DIR)/`dirname $$f`; \
		$(INS) $(ROOT_DOC_DIR)/`dirname $$f` $$f.bz2; \
	done; )
	touch $@

$(VER)/.installed: $(VER)/.docs_installed $(VER)/.fonts_installed

clean:
	$(RM) -r $(VER) $(ORIG_VER)

clobber: clean

include $(SRC)/Makefile.targ

